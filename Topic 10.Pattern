        }  
        for (i = n-1; i >= 1; i--) {  
            for (j = 1; j <= i; j++) { 
                System.out.print("* "); 
            } 
  
            System.out.println(); 
        } 
    } 
    public static void main(String args[]) 
    { 
        int n = 4; 
        printPattern(n); 
